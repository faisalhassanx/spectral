<%= form_for @ingredient do |f| %>
  
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    
  </div>
  
  <div class="form-group"> 
        <%= f.submit "Create Ingredient", class: "btn btn-success" %>
      </div>


<% end %> 