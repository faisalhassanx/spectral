<%= form_for @recipe, url: recipes_path(@recipe), html: { multipart: true } do |f| %>
  
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>
  
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :summary %>
        <%= f.text_field :summary, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", size: "50x10" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Recipe", class: "btn btn-success" %>
  </div>
<% end %>