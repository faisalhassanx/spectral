<%= form_for @chef, html: { multipart: true } do |f| %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control", size: "50x10" %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: 'image/jpeg, image/jpg, image/png, image/gif' %>
  </div>

  <div class="form-group"> 
    <%= f.submit ( f.object.new_record? ? "Create Recipe" : "Update Recipe"), class: "btn btn-success" %>
  </div>
<% end %>